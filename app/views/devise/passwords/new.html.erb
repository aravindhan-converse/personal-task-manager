<div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all"  %>
      </div>

      <%= f.submit "Send me reset password instructions", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 rounded-lg transition-colors" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      Already have an account? 
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>