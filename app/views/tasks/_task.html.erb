<tr id="<%= dom_id task %>" class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600">
  <td class="px-6 py-4">
      <div class="flex items-center">
        <%= task.title %>
      </div>
  </td>
  <th scope="row" class="flex items-center px-6 py-4 whitespace-nowrap dark:text-white">
      <%= task.description %>
  </th>
  <td class="px-6 py-4">
    <%= task.category %>
  </td>
  <td class="px-6 py-4">
    <%= task.priority %>
  </td>
  <td class="px-6 py-4">
    <%= task.due_date %>
  </td>
  <td class="px-6 py-4">
      <div class="flex items-center">
          <div class="h-2.5 w-2.5 rounded-full bg-green-500 me-2"></div> <%= task.status %>
      </div>
  </td>
  <td class="px-6 py-4">
      <%= link_to "Show", task, class: "px-3 font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
      <%= link_to "Edit", edit_task_path(task), class: "px-3 font-medium text-green-600 dark:text-blue-500 hover:underline" %>
      <%= link_to "Destroy", task, method: :delete, class: "px-3 font-medium text-red-600 dark:text-blue-500 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
  </td>
</tr>